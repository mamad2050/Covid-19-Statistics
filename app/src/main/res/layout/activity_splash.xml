<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".feature.splash.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_container"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/lottie" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_connectionLost"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/no_internet" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_connectionLost"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_connectionLost"
            android:text="@string/no_connect"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            />


        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinkit"
            android:layout_width="32dp"
            android:layout_alignParentBottom="true"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            app:SpinKit_Color="@color/white"
            app:SpinKit_Style="FadingCircle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retry"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:text="@string/retry"
            style="@style/ThemeOverlay.Material3.Button.TextButton"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp" />


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>